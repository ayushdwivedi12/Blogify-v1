<style>
  .navbar {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    padding: 0.6rem 1rem;
  }

  .navbar-brand {
    font-weight: 700;
    font-size: 1.5rem;
  }

  .nav-link {
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: #ffc107 !important;
  }

  form[role="search"] input {
    max-width: 250px;
  }

  @media (max-width: 768px) {
    form[role="search"] input {
      max-width: 150px;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">üìù Blogify</a>

    <!-- Mobile Toggle Button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Content -->
    <div class="collapse navbar-collapse d-lg-flex justify-content-between align-items-center" id="navbarContent">

      <!-- Left Nav Links -->
      <ul class="navbar-nav mb-2 mb-lg-0 flex-row flex-wrap gap-2">
        <li class="nav-item">
          <a class="nav-link active" href="/">Home</a>
        </li>

        <% if (locals.user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/blog/add-blog">Add Blog</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              üëã <%= user.fullName %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
            </ul>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/user/signup">Create Account</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/signin">Sign In</a>
          </li>
        <% } %>
      </ul>

      <!-- Search Bar -->
      <form class="d-flex mt-2 mt-lg-0" action="/blog/search" method="GET" role="search">
        <input class="form-control me-2" type="search" name="title" placeholder="Search Blog..." required>
        <button class="btn btn-sm btn-outline-light" type="submit">Search</button>
      </form>

    </div>
  </div>
</nav>
