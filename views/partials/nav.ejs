<style>
  .navbar {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    padding: 0.6rem 1rem;
    white-space: nowrap;
    overflow-x: auto;
  }

  .navbar-brand {
    font-weight: 700;
    font-size: 1.5rem;
    margin-right: 1.5rem;
  }

  .nav-link {
    font-weight: 500;
    transition: color 0.3s ease;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
  }

  .nav-link:hover {
    color: #ffc107 !important;
  }

  form[role="search"] input {
    max-width: 240px; /* üî• Increased from 180 to 240 */
  }

  @media (max-width: 768px) {
    form[role="search"] {
      flex-wrap: nowrap;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex align-items-center justify-content-between">
  <div class="container-fluid d-flex align-items-center gap-3 flex-nowrap">
    <a class="navbar-brand" href="/">üìù Blogify</a>

    <ul class="navbar-nav flex-row gap-2 me-auto mb-0">
      <li class="nav-item">
        <a class="nav-link active" href="/">Home</a>
      </li>

      <% if (locals.user) { %>
        <li class="nav-item">
          <a class="nav-link" href="/blog/add-blog">Add Blog</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
            üëã <%= user.fullName %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
          </ul>
        </li>
      <% } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/user/signup">Create Account</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/signin">Sign In</a>
        </li>
      <% } %>
    </ul>

    <form class="d-flex align-items-center" action="/blog/search" method="GET" role="search">
      <input class="form-control me-2" type="search" name="title" placeholder="Search Blog..." required>
      <button class="btn btn-sm btn-outline-light" type="submit">Search</button>
    </form>
  </div>
</nav>
